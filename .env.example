# ===========================================
# CHESS SERVER GAME - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MAX_CONNECTIONS=100

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
# MongoDB connection string (Atlas or local)
# Format: mongodb+srv://username:password@host/database
# Or: mongodb://localhost:27017/database
MONGODB_CONNECTION_STRING=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=chess_server_game

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis TTL (Time To Live) settings in seconds
REDIS_SESSION_TTL=86400
REDIS_CHALLENGE_TTL=300

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret Key (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=86400

# Password hashing
BCRYPT_ROUNDS=12

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/server.log
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# ===========================================
# GAME CONFIGURATION
# ===========================================
GAME_MOVE_TIMEOUT=30
GAME_TOTAL_TIME=600
GAME_MAX_HISTORY=1000
